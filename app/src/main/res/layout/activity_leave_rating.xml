<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LeaveRatingActivity">

    <TextView
        android:id="@+id/leave_rating_source_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="Title" />
    <TextView
        android:id="@+id/leave_rating_source_description"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/leave_rating_source_title"
        android:layout_alignStart="@id/leave_rating_source_title"
        android:text="Description"
        />

    <EditText
        android:id="@+id/leave_rating_source_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/leave_rating_source_title"
        android:layout_below="@id/leave_rating_source_description"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:textSize="12sp"
        android:maxLength="500"
        android:maxLines="20"
        android:hint="Write a review (Can be left empty)"
        android:inputType="textMultiLine"
        android:paddingTop="10dp" />

    <RatingBar
        android:id="@+id/leave_rating_source_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/leave_rating_source_title"
        android:layout_below="@id/leave_rating_source_review"
        android:paddingTop="10dp"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leave_rating_source_submit"
        android:text="Submit"
        android:paddingRight="10dp"
        android:layout_below="@id/leave_rating_source_ratingbar"
        android:layout_alignStart="@id/leave_rating_source_ratingbar"
        android:paddingLeft="10dp"
        />
</RelativeLayout>