<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/news_srouce_row_background"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/news_source_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/activity_vertical_margin"
        app:cardElevation="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/news_source_cardview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Title"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/news_source_cardview_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_source_cardview_name"
                android:text="Country"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="3"
                />

            <TextView
                android:id="@+id/news_source_cardview_language"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_source_cardview_name"
                android:layout_toRightOf="@+id/news_source_cardview_country"
                android:paddingLeft="15dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Language"
                android:textSize="12sp" />
        </RelativeLayout>
       <!-- <View
            android:id="@+id/selected_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="200"
            android:background="@color/colorPrimaryDark"
            android:visibility="invisible" />-->
    </android.support.v7.widget.CardView>
</RelativeLayout>